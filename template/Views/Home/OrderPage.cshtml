<div class="container dz-divider bg-gray-dark text-gray-dark icon-center mx-auto my-5"><i class="fa fa-circle bg-white text-gray-dark"></i></div>
<div class="container">
<div class="row">
	<div class="col-lg-6">
		<div class="widget">
			<h4 class="widget-title">Your Order</h4>
			<table class="table-bordered check-tbl">
				<thead class="text-center">
					<tr>
						<th>IMAGE</th>
						<th>PRODUCT NAME</th>
						<th>TOTAL</th>
					</tr>
				</thead>
				<tbody>
						@foreach (System.Data.DataRow dr in ViewBag.OrderData.Rows){
							
					<tr>
								<td class="product-item-img"><img src="@ViewBag.ImageUrls[ViewBag.OrderData.Rows.IndexOf(dr)]" alt="Book image"></td>
								<td class="product-item-name">@dr["BookName"].ToString()</td>
								<td class="product-price">@dr["BookPrice"].ToString()</td>
					</tr>
						}
				</tbody>
			</table>
		</div>
							
	</div>
	<div class="col-lg-6">
		<form class="shop-form widget" method="post">
			<h4 class="widget-title">Order Total</h4>
			<table class="table-bordered check-tbl mb-4">
				<tbody>
					<tr>
						<td>Order Subtotal</td>
							<td class="product-price">@string.Format("{0:C}", ViewBag.OrderSubtotal)</td>
					</tr>
					<tr>
						<td>Shipping</td>
							<td>@string.Format("{0:C}", ViewBag.ShippingCharge)</td>
					</tr>
					
					<tr>
						<td>Total</td>
							<td class="product-price-total">@string.Format("{0:C}", ViewBag.OverallTotal)</td>
					</tr>
				</tbody>
			</table>
			<h4 class="widget-title">Payment Method</h4>
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Name on Card" name="CardName" required>
			</div>
			
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Credit Card Number" name="CardNum" required>
			</div>
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Card Verification Number" name="CardVerifyNum" maxlength="3" required>
			</div>
			<div class="form-group">
				<button class="btn btn-primary btnhover" type="submit">Place Order Now </button>
			</div>
		</form>
	</div>
</div>
</div>
